---
import { Image } from 'astro:assets';

import fireImg from "../assets/element/ele_fire.webp";
import iceImg from "../assets/element/ele_ice.webp";
import imaginaryImg from "../assets/element/ele_imaginary.webp";
import lightningImg from "../assets/element/ele_lightning.webp";
import physicalImg from "../assets/element/ele_physical.webp";
import quantumImg from "../assets/element/ele_quantum.webp";
import windImg from "../assets/element/ele_wind.webp";

const {fire, ice, imaginary, lightning, physical, quantum, wind} = Astro.props as ElementProps;

interface ElementProps {
    fire: boolean;
    ice: boolean;
    imaginary: boolean;
    lightning: boolean;
    physical: boolean;
    quantum: boolean;
    wind: boolean;
}

const getClass = (prop: boolean) => prop ? 'show' : 'hidden';
---

<Image src={fireImg} alt="Fire element" class={getClass(fire)} />
<Image src={iceImg} alt="Ice element" class={getClass(ice)} />
<Image src={imaginaryImg} alt="Imaginary element" class={getClass(imaginary)} />
<Image src={lightningImg} alt="Lightning element" class={getClass(lightning)} />
<Image src={physicalImg} alt="Physical element" class={getClass(physical)} />
<Image src={quantumImg} alt="Quantum element" class={getClass(quantum)} />
<Image src={windImg} alt="Wind element" class={getClass(wind)} />

<style>
    .show {
        display: block;
    }

    .hidden {
        display: none;
    }
</style>
